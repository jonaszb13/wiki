          <a class="single" href="/articles/<%= article._id %>">
            <h3 class="title"><%= article.title %></h3>
            <p class="snippet"><%= article.snippet %></p>
            <p class="body"><%= article.body %></p>
          </a>
        </div>
        <% }) %>
    
      <% articlesMain.slice(4, 5).forEach(article => { %>
        <div class="fifthArticle">
          <a class="single" href="/articles/<%= article._id %>">
            <h3 class="title"><%= article.title %></h3>
